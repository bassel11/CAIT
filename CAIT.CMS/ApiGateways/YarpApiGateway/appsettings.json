{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "a-string-secret-at-least-256-bits-long",
    "Issuer": "identity.api",
    "Audience": "committee.clients",
    "DurationInMinutes": 60
  },
  "ReverseProxy": {
    "Routes": {
      "identity-public-login": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "LoginPolicy",
        "Match": {
          "Path": "/api/Auth/login",
          "Methods": [ "POST" ]
        }
      },
      "identity-public-register": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Auth/register",
          "Methods": [ "POST" ]
        }
      },
      "identity-public-refresh": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Auth/refresh-token",
          "Methods": [ "POST" ]
        }
      },
      "identity-public-mfa": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Auth/verify-mfa",
          "Methods": [ "POST" ]
        }
      },
      "identity-auth-wildcard": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        }
      },
      "identity-azure": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/AzureAuth/{**catch-all}"
        }
      },
      "identity-permission": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Permission/{**catch-all}"
        }
      },
      "identity-role": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Role/{**catch-all}"
        }
      },
      "identity-role-permission": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/RolePermission/{**catch-all}"
        }
      },
      "identity-user": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/User/{**catch-all}"
        }
      },
      "identity-user-roles": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/UserRoles/{**catch-all}"
        }
      },
      "identity-user-role-permission": {
        "ClusterId": "identity-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/UsrRolPermRes/{**catch-all}"
        }
      },
      "committee-base": {
        "ClusterId": "committee-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Committee/{**catch-all}"
        }
      },
      "committee-member": {
        "ClusterId": "committee-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/CommitteeMember/{**catch-all}"
        }
      },
      "committee-member-role": {
        "ClusterId": "committee-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/CommitteeMemberRole/{**catch-all}"
        }
      },
      "committee-quorum": {
        "ClusterId": "committee-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/CommitteeQuorumRule/{**catch-all}"
        }
      },
      "committee-status": {
        "ClusterId": "committee-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/CommitteeStatus/{**catch-all}"
        }
      },
      "committee-status-history": {
        "ClusterId": "committee-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/CommitteeStatusHistory/{**catch-all}"
        }
      },
      "audit-query": {
        "ClusterId": "audit-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/AuditQuery/{**catch-all}"
        }
      },
      "decision-base": {
        "ClusterId": "decision-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Decisions/{**catch-all}"
        }
      },
      "meeting-base": {
        "ClusterId": "meeting-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Meeting/{**catch-all}"
        }
      },
      "meeting-agenda": {
        "ClusterId": "meeting-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/AgendaItem/{**catch-all}"
        }
      },
      "meeting-attendance": {
        "ClusterId": "meeting-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/Attendance/{**catch-all}"
        }
      },
      "meeting-mom": {
        "ClusterId": "meeting-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/MoM/{**catch-all}"
        }
      },
      "meeting-debug": {
        "ClusterId": "meeting-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/api/DebugRabbit/{**catch-all}"
        }
      },
      "task-weather": {
        "ClusterId": "task-cluster",
        "AuthorizationPolicy": "allowed",
        "Match": {
          "Path": "/WeatherForecast/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5281"
          }
        }
      },
      "committee-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5259"
          }
        }
      },
      "audit-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5248"
          }
        }
      },
      "decision-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5020"
          }
        }
      },
      "meeting-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5205"
          }
        }
      },
      "task-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5253"
          }
        }
      }
    }
  }
}
